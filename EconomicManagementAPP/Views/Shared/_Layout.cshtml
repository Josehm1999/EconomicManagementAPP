<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EconomicManagementAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EconomicManagementAPP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sortable_custom.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <header class="header">
        <div class="overlay has-fade"></div>
        <nav class="container-lg py-4 px-4 my-0 mx-auto d-flex justify-content-between align-items-center">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EconomicManagementAPP</a>
                <a id="headerMenu" href="#" class="header__toggle hide-for-desktop">
                    <span></span>
                    <span></span>
                    <span></span>
                </a>
                <div class="header__links hide-for-mobile">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                    <a asp-area="" asp-controller="AccountTypes" asp-action="Index">Account Types</a>

                    <a asp-area="" asp-controller="Users" asp-action="Index">Users</a>

                    <a asp-area="" asp-controller="Accounts" asp-action="Index">Accounts</a>

                    <a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>

                    <a asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a>
                </div>
                <a class="button header__cta hide-for-mobile"  asp-area="" asp-controller="Users" asp-action="Create">Register</a>
        </nav>
        <div class="header__menu has-fade">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                    <a asp-area="" asp-controller="AccountTypes" asp-action="Index">Account Types</a>

                    <a asp-area="" asp-controller="Users" asp-action="Index">Users</a>

                    <a asp-area="" asp-controller="Accounts" asp-action="Index">Accounts</a>

                    <a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>

                    <a asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a>
                </div>
    </header>

    <div class="container main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

     <footer class="footer px-5 py-5  ">

        <a class="footer__logo d-inline-block mb-4 mb-lg-0" asp-area="" asp-controller="Home" asp-action="Index">EconomicManagementAPP</a>

        <div class="footer__social mb-4 mb-lg-0">
                    </div>

        <div class="footer__links col1">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>

            <a asp-area="" asp-controller="AccountTypes" asp-action="Index">Account Types</a>

            <a asp-area="" asp-controller="Users" asp-action="Index">Users</a>

        </div>

        <div class="footer__links col2">
            <a asp-area="" asp-controller="Accounts" asp-action="Index">Accounts</a>

            <a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>

            <a asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a>
        </div>
        <div class="footer__cta mb-4 mb-lg-0">
            <a class="button header__cta hide-for-mobile" asp-area="" asp-controller="Users" asp-action="Create">Register</a>
        </div>
        <div class="footer__copyright">&copy; 2022 EconomicManagementAPP All Rights Reserved.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
